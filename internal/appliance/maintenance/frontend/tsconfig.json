{
  "compilerOptions": {
    "target": "es2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "declaration": true,
    "strict": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "esbuild.cjs"],
  "include": ["src", "types/**/*", ".storybook/**/*.ts", ".storybook/**/*.tsx"]
}
